<% content_for :title do %>
  <%= @activity.name %>
<% end %>

<% content_for :buttons do %>
  <%= link_to 'Edit', edit_activity_path(@activity), class: 'btn btn-primary' %>
  <%= link_to 'Back', activities_path, class: 'btn btn-warning' %>
<% end %>

<table>
  <tr>
    <th>Scheduled Date: &nbsp; &nbsp;</th>
    <td><%= @activity.activity_date %></td>
  </tr>

  <tr>
    <th>Duration</th>
    <td><%= @activity.duration %> <%= @activity.duration > 1 ? 'hours' : 'hour' %></td>
  </tr>
</table>

